@model IEnumerable<Model.Group>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Groups", new { id = item.GroupId }, new { @style = "color:#000000   ;" })
                </td>
                <td>
                    @Html.ActionLink(item.Course.Name, "Details", "Courses", new { id = item.CourseId }, new { @style = "color:#000000;" })
                </td>
                <td>
                    <a asp-controller="Groups" asp-action="Edit" asp-route-id="@item.GroupId">Edit</a> |
                    <a asp-controller="Groups" asp-action="Details" asp-route-id="@item.GroupId">Details</a> |
                    <a asp-controller="Groups" asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


